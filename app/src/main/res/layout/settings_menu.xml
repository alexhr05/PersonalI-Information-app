<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtBack"
        android:layout_width="306dp"
        android:layout_height="28dp"
        android:layout_marginTop="628dp"
        android:layout_marginEnd="64dp"
        android:text="Back"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBackArrow"
        android:layout_width="64dp"
        android:layout_height="26dp"
        android:layout_marginTop="628dp"
        android:layout_marginEnd="64dp"
        android:text=">"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="100dp"
        android:text="Settings menu"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtHelp"
        android:layout_width="306dp"
        android:layout_height="28dp"
        android:layout_marginTop="312dp"
        android:layout_marginEnd="64dp"
        android:text="Help"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtHelpArrow"
        android:layout_width="64dp"
        android:layout_height="26dp"
        android:layout_marginTop="312dp"
        android:layout_marginEnd="60dp"
        android:text=">"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAuthorInfo"
        android:layout_width="306dp"
        android:layout_height="28dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="64dp"
        android:text="About author"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAuthorInfoArrow"
        android:layout_width="64dp"
        android:layout_height="26dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="68dp"
        android:text=">"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/btnSwitchFingerprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="96dp"
        android:text="Use Fingerprint"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgViewFingerPrint"
        android:layout_width="67dp"
        android:layout_height="52dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="188dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fingerprint_black" />

</androidx.constraintlayout.widget.ConstraintLayout>