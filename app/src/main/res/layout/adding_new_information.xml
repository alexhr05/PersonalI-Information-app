<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txtError"
        android:layout_width="357dp"
        android:layout_height="60dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="564dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="9dp"
        android:text=""
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSaveInformation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="332dp"
        android:layout_height="39dp"
        android:layout_marginTop="72dp"
        android:text="Добавяне на нова информация"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/txtWebsite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.292" />

    <EditText
        android:id="@+id/edTxtWebsite"
        android:layout_width="336dp"
        android:layout_height="42dp"
        android:layout_marginBottom="84dp"
        android:ems="10"
        android:hint="Ex: Google/ https://www.deepl.com/ и други"
        android:inputType="textPersonName"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/edTxtEmailUsername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtWebsite"
        android:layout_width="364dp"
        android:layout_height="33dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="152dp"
        android:text="Въведете име на websit или URL линк:"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/edTxtWebsite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edTxtEmailUsername"
        android:layout_width="278dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="Ex: qwerty@gmail.com/ velikstar и други"
        android:inputType="textPersonName"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="343dp" />

    <TextView
        android:id="@+id/txtEmailUsername"
        android:layout_width="301dp"
        android:layout_height="36dp"
        android:layout_marginStart="88dp"
        android:text="Въведете email или username :"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/edTxtEmailUsername"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edTxtWebsite"
        app:layout_constraintVertical_bias="0.673" />

    <TextView
        android:id="@+id/txtPassword"
        android:layout_width="360dp"
        android:layout_height="27dp"
        android:layout_marginTop="40dp"
        android:text="Въведете паролата Ви за това място:"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/txtError"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edTxtEmailUsername"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edTxtPassword"
        android:layout_width="272dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="Ex: Qwery123/ pOiuyt321 и други"
        android:inputType="textPersonName"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/txtError"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPassword"
        app:layout_constraintVertical_bias="0.377" />

    <Button
        android:id="@+id/btnSaveInformation"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="7"
        android:shadowRadius="6"
        android:text="Добави"
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtError" />

</androidx.constraintlayout.widget.ConstraintLayout>