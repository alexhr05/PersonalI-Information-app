<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEndBottomSecondStepLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStartTopSecondStepLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.18" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEndSecondStepLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.93" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStartSecondStepLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06" />

    <Button
        android:id="@+id/btnContinueToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="196dp"
        android:text="Continue to Login"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEndSecondStepLogin"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="@+id/guidelineStartSecondStepLogin"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:layout_constraintVertical_bias="0.725" />

    <Button
        android:id="@+id/btnActivateFingerprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activate Fingerprint"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineEndBottomSecondStepLogin"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEndSecondStepLogin"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/guidelineStartSecondStepLogin"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.678" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Second Step To Login"
        android:textSize="@dimen/_26sdp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineStartTopSecondStepLogin"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEndSecondStepLogin"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/guidelineStartSecondStepLogin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.359" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="@dimen/_245sdp"
        android:layout_height="wrap_content"
        android:text="But if you haven't fingerprint or you don't want ot use, click button 'Continue to Login'"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEndSecondStepLogin"
        app:layout_constraintHorizontal_bias="0.576"
        app:layout_constraintStart_toStartOf="@+id/guidelineStartSecondStepLogin"
        app:layout_constraintTop_toTopOf="@+id/guidelineEndBottomSecondStepLogin"
        app:layout_constraintVertical_bias="0.081" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="@dimen/_245sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Here if you want to use fingerprint to log in app, click the button.      "
        android:textSize="@dimen/_16sdp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineEndBottomSecondStepLogin"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEndSecondStepLogin"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="@+id/guidelineStartSecondStepLogin"
        app:layout_constraintTop_toTopOf="@+id/guidelineStartTopSecondStepLogin"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>