<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_26sdp"
        android:layout_marginTop="30dp"
        android:text="Editing of information"
        android:textColor="@color/black"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintBottom_toTopOf="@+id/edTxtWebsite"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEditing2"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="@+id/guidelineEditing1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.096" />

    <EditText
        android:id="@+id/edTxtWebsite"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_34sdp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="@dimen/_14sdp"
        android:hint="Website"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEditing2"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="@+id/guidelineEditing1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.962" />

    <TextView
        android:id="@+id/txtWebsite"
        android:layout_width="@dimen/_226sdp"
        android:layout_height="@dimen/_22sdp"
        android:text="Website (place where you logged in) :"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintBottom_toTopOf="@+id/edTxtWebsite"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEditing2"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="@+id/guidelineEditing1"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        app:layout_constraintVertical_bias="0.58" />

    <TextView
        android:id="@+id/txtPassword"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_22sdp"
        android:text="Your password:"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEditing2"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/guidelineEditing1"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        app:layout_constraintVertical_bias="0.882" />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_40sdp"
        android:id="@+id/txtInputLayout_edTxtPassword"
        app:layout_constraintBottom_toTopOf="@+id/btnSaveInformation"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEditing2"
        app:layout_constraintStart_toStartOf="@+id/guidelineEditing1"
        app:layout_constraintTop_toTopOf="@+id/guideline8"
        app:passwordToggleEnabled="true"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/edTxtPassword"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginBottom="220dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPersonName"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guidelineEditing2"
            app:layout_constraintHorizontal_bias="0.46"
            app:layout_constraintStart_toStartOf="@+id/guidelineEditing1"
            app:layout_constraintTop_toTopOf="@+id/guideline8"
            app:layout_constraintVertical_bias="0.805" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/txtEmailUsername"
        android:layout_width="@dimen/_172sdp"
        android:layout_height="@dimen/_22sdp"
        android:text="Your email or username:"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintBottom_toTopOf="@+id/txtPassword"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEditing2"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="@+id/guidelineEditing1"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        app:layout_constraintVertical_bias="0.214" />

    <EditText
        android:id="@+id/edTxtEmailUsername"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_34sdp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="@dimen/_14sdp"
        android:hint="Email or Username"
        app:layout_constraintBottom_toTopOf="@+id/txtPassword"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEditing2"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="@+id/guidelineEditing1"
        app:layout_constraintTop_toBottomOf="@+id/txtEmailUsername"
        app:layout_constraintVertical_bias="0.292" />

    <Button
        android:id="@+id/btnSaveInformation"
        android:layout_width="@dimen/_132sdp"
        android:layout_height="@dimen/_42sdp"
        android:layout_marginBottom="100dp"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="7"
        android:shadowRadius="6"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_17sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEditing2"
        app:layout_constraintStart_toStartOf="@+id/guidelineEditing1"
        app:layout_constraintTop_toBottomOf="@+id/edTxtPassword"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEditing1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.065" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEditing2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.945" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.28" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.58" />

</androidx.constraintlayout.widget.ConstraintLayout>