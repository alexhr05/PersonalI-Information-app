<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEndAboutAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.98" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStartAboutAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEndBottomAboutAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStartTopAboutAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.14" />

    <TextView
        android:id="@+id/txtBack"
        android:layout_width="@dimen/_234sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="Back"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEndAboutAuthor"
        app:layout_constraintHorizontal_bias="0.616"
        app:layout_constraintStart_toStartOf="@+id/guidelineStartAboutAuthor"
        app:layout_constraintTop_toTopOf="@+id/guidelineEndBottomAboutAuthor"
        app:layout_constraintVertical_bias="0.334" />

    <TextView
        android:id="@+id/txtBackArrow"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text=">"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEndAboutAuthor"
        app:layout_constraintHorizontal_bias="0.911"
        app:layout_constraintStart_toStartOf="@+id/guidelineStartAboutAuthor"
        app:layout_constraintTop_toTopOf="@+id/guidelineEndBottomAboutAuthor"
        app:layout_constraintVertical_bias="0.327" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="32dp"
        android:text="About Author"
        android:textSize="@dimen/_27sdp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineStartTopAboutAuthor"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEndAboutAuthor"
        app:layout_constraintStart_toStartOf="@+id/guidelineStartAboutAuthor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtParagraph"
        android:layout_width="@dimen/_286sdp"
        android:layout_height="@dimen/_380sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="4dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp"
        android:text="Info For Text"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineEndBottomAboutAuthor"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEndAboutAuthor"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="@+id/guidelineStartAboutAuthor"
        app:layout_constraintTop_toTopOf="@+id/guidelineStartTopAboutAuthor" />

</androidx.constraintlayout.widget.ConstraintLayout>